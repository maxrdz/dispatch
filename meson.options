option(
  'profile',
  type: 'combo',
  choices: [
    'release',
    'debug'
  ],
  value: 'release',
  description: 'The build profile for Dispatch. `release` or `debug`.'
)
option(
  'target',
  type: 'string',
  value: '',
  description: 'Rustc cross-compilation target triple. Default is an empty string, which compiles natively.'
)
option(
  'cross-verbose',
  type: 'boolean',
  value: false,
  description: 'Appends the -v flag when invoking cross. Applies if cross compiling.'
)
option(
  'use-feedbackd',
  type: 'boolean',
  value: false,
  description: 'Compiles with support for feedbackd on mobile devices.'
)
